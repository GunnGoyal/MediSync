<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Doctor Dashboard - MediSync</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, sans-serif;
            background: url('https://images.pexels.com/photos/4197564/pexels-photo-4197564.jpeg') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
        }
        .header {
            background: transparent;
            text-align: center;
            padding: 20px 0;
        }
        .header h1 {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 48px;
            font-weight: 800;
            letter-spacing: 2px;
            text-transform: uppercase;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
        .navbar {
            background: rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            padding: 16px 40px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .navbar .doctor-name {
            color: #2c3e50;
            font-size: 18px;
            font-weight: 600;
        }
        .navbar .nav-links {
            display: flex;
            gap: 24px;
        }
        .navbar .nav-links a {
            color: #2c3e50;
            text-decoration: none;
            font-size: 16px;
            font-weight: 500;
            transition: opacity 0.2s;
        }
        .navbar .nav-links a:hover {
            opacity: 0.7;
            text-decoration: underline;
        }
        .container {
            max-width: 900px;
            margin: 40px auto;
            background: rgba(255,255,255,0.95);
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }
        h2 {
            color: #4169E1;
            margin-bottom: 32px;
            text-align: center;
            font-size: 28px;
        }
        .welcome {
            font-size: 20px;
            color: #333;
            margin-bottom: 24px;
            text-align: center;
        }
        
        /* Status Controls */
        .status-section {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 30px;
        }
        .status-label {
            font-size: 16px;
            font-weight: 600;
            color: #333;
            margin-bottom: 12px;
        }
        .status-buttons {
            display: flex;
            gap: 12px;
            justify-content: center;
        }
        .status-btn {
            padding: 10px 24px;
            border: 2px solid #ddd;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: all 0.3s;
        }
        .status-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .status-btn.active {
            border-width: 3px;
        }
        .status-btn.available {
            color: #28a745;
            border-color: #28a745;
        }
        .status-btn.available.active {
            background: #28a745;
            color: white;
        }
        .status-btn.busy {
            color: #ffc107;
            border-color: #ffc107;
        }
        .status-btn.busy.active {
            background: #ffc107;
            color: white;
        }
        .status-btn.offline {
            color: #dc3545;
            border-color: #dc3545;
        }
        .status-btn.offline.active {
            background: #dc3545;
            color: white;
        }
        .current-status {
            display: inline-block;
            padding: 6px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 14px;
            margin-left: 12px;
        }
        .current-status.available {
            background: #d4edda;
            color: #155724;
        }
        .current-status.busy {
            background: #fff3cd;
            color: #856404;
        }
        .current-status.offline {
            background: #f8d7da;
            color: #721c24;
        }
    </style>
</head>
<body>
    <!-- Hospital Header -->
    <div class="header">
        <h1>MediSync</h1>
    </div>
    
    <!-- Navigation Bar -->
    <div class="navbar">
        <div class="doctor-name">
            <% if (doctor) { %>
                Dr. <%= doctor.name %>
            <% } else { %>
                Doctor Portal
            <% } %>
        </div>
        <div class="nav-links">
            <a href="/doctors/dashboard">Dashboard</a>
            <a href="/logout">Logout</a>
        </div>
    </div>
    
    <div class="container">
        <h2>Doctor Dashboard</h2>
        <% if (error) { %>
            <div class="error" style="color:red; margin-bottom:20px;"><%= error %></div>
        <% } else if (doctor) { %>
            <div class="welcome">Welcome, <b><%= doctor.name %></b>!</div>
            <div style="font-size:17px; color:#555; margin-bottom:24px;">Specialization: <b><%= doctor.specialization %></b></div>
        <% } else { %>
            <div class="welcome">Welcome, Doctor!</div>
        <% } %>
        
        <!-- Doctor Status Section -->
        <div class="status-section">
            <div class="status-label">
                Your Status: <span id="current-status-badge" class="current-status offline">OFFLINE</span>
            </div>
            <div class="status-buttons">
                <button class="status-btn available" onclick="updateStatus('available')">
                    üü¢ Available
                </button>
                <button class="status-btn busy" onclick="updateStatus('busy')">
                    üü° Busy
                </button>
                <button class="status-btn offline" onclick="updateStatus('offline')">
                    üî¥ Offline
                </button>
            </div>
        </div>

        <% if (appointments && appointments.length > 0) { %>
            <h3 style="margin-top:32px; color:#007bff;">Your Appointments</h3>
            <table style="width:100%; margin-top:16px; border-collapse:collapse;">
                <tr style="background:#e3f2fd;">
                    <th style="padding:8px; border:1px solid #ccc;">Patient Name</th>
                    <th style="padding:8px; border:1px solid #ccc;">Date</th>
                    <th style="padding:8px; border:1px solid #ccc;">Start Time</th>
                    <th style="padding:8px; border:1px solid #ccc;">End Time</th>
                    <th style="padding:8px; border:1px solid #ccc;">Status</th>
                    <th style="padding:8px; border:1px solid #ccc;">Action</th>
                </tr>
                <% appointments.forEach(function(app) { %>
                    <tr>
                        <td style="padding:8px; border:1px solid #ccc;"><%= app.patient_name %></td>
                        <td style="padding:8px; border:1px solid #ccc;"><%= app.appointment_date.toISOString ? app.appointment_date.toISOString().slice(0,10) : app.appointment_date %></td>
                        <td style="padding:8px; border:1px solid #ccc;"><%= app.start_time %></td>
                        <td style="padding:8px; border:1px solid #ccc;"><%= app.end_time %></td>
                        <td style="padding:8px; border:1px solid #ccc;">
                            <span style="padding:4px 8px; border-radius:4px; font-size:12px; font-weight:600;
                                <%= app.status === 'pending' ? 'background:#fff3cd; color:#856404;' : '' %>
                                <%= app.status === 'accepted' ? 'background:#d4edda; color:#155724;' : '' %>
                                <%= app.status === 'rejected' ? 'background:#f8d7da; color:#721c24;' : '' %>">
                                <%= app.status.toUpperCase() %>
                            </span>
                        </td>
                        <td style="padding:8px; border:1px solid #ccc;">
                            <% if (app.status === 'pending') { %>
                                <form action="/doctors/appointment/<%= app.id %>/accept" method="POST" style="display:inline;">
                                    <button type="submit" style="padding:4px 12px; background:#28a745; color:white; border:none; border-radius:4px; cursor:pointer; margin-right:4px;">Accept</button>
                                </form>
                                <form action="/doctors/appointment/<%= app.id %>/reject" method="POST" style="display:inline;">
                                    <button type="submit" style="padding:4px 12px; background:#dc3545; color:white; border:none; border-radius:4px; cursor:pointer;">Reject</button>
                                </form>
                            <% } else { %>
                                <span style="color:#888;">-</span>
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            </table>
        <% } else { %>
            <div style="margin-top:32px; color:#888;" id="no-appointments-msg">No appointments yet.</div>
        <% } %>
    </div>

    <!-- Socket.IO Client Script -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        console.log('üîß Initializing Socket.IO client...');
        const socket = io();
        
        // Doctor ID from server-side session
        const doctorId = <%= doctor ? doctor.id : 'null' %>;
        console.log('üë®‚Äç‚öïÔ∏è Current doctor ID:', doctorId);
        
        socket.on('connect', function() {
            console.log('‚úÖ Connected to Socket.IO server');
            console.log('   Socket ID:', socket.id);
        });
        
        socket.on('connect_error', function(error) {
            console.error('‚ùå Connection error:', error);
        });
        
        // Listen for new appointment bookings
        socket.on('appointmentBooked', function(data) {
            console.log('üì© Received appointmentBooked event:', data);
            console.log('   Event doctor ID:', data.doctorId, '(type:', typeof data.doctorId + ')');
            console.log('   Current doctor ID:', doctorId, '(type:', typeof doctorId + ')');
            
            // Only update if this appointment is for the current doctor
            if (data.doctorId !== doctorId) {
                console.log('üîï Appointment not for this doctor, ignoring');
                console.log('   Comparison:', data.doctorId, '!==', doctorId);
                return;
            }
            
            console.log('‚ú® New appointment for this doctor! Updating UI...');
            
            // Find the appointments table or create it if it doesn't exist
            let table = document.querySelector('table');
            
            if (!table) {
                // If no table exists, create one
                const noAppMsg = document.getElementById('no-appointments-msg');
                if (noAppMsg) {
                    noAppMsg.remove();
                }
                
                const container = document.querySelector('.container');
                const heading = document.createElement('h3');
                heading.style.marginTop = '32px';
                heading.style.color = '#007bff';
                heading.textContent = 'Your Appointments';
                container.appendChild(heading);
                
                table = document.createElement('table');
                table.style.width = '100%';
                table.style.marginTop = '16px';
                table.style.borderCollapse = 'collapse';
                
                const headerRow = document.createElement('tr');
                headerRow.style.background = '#e3f2fd';
                headerRow.innerHTML = `
                    <th style="padding:8px; border:1px solid #ccc;">Patient Name</th>
                    <th style="padding:8px; border:1px solid #ccc;">Date</th>
                    <th style="padding:8px; border:1px solid #ccc;">Start Time</th>
                    <th style="padding:8px; border:1px solid #ccc;">End Time</th>
                    <th style="padding:8px; border:1px solid #ccc;">Status</th>
                    <th style="padding:8px; border:1px solid #ccc;">Action</th>
                `;
                table.appendChild(headerRow);
                container.appendChild(table);
            }
            
            // Create new table row for the appointment
            const newRow = document.createElement('tr');
            newRow.innerHTML = `
                <td style="padding:8px; border:1px solid #ccc;">${data.patientName}</td>
                <td style="padding:8px; border:1px solid #ccc;">${data.appointmentDate}</td>
                <td style="padding:8px; border:1px solid #ccc;">${data.startTime}</td>
                <td style="padding:8px; border:1px solid #ccc;">${data.endTime}</td>
                <td style="padding:8px; border:1px solid #ccc;">
                    <span style="padding:4px 8px; border-radius:4px; font-size:12px; font-weight:600; background:#fff3cd; color:#856404;">
                        PENDING
                    </span>
                </td>
                <td style="padding:8px; border:1px solid #ccc;">
                    <form action="/doctors/appointment/${data.appointmentId}/accept" method="POST" style="display:inline;">
                        <button type="submit" style="padding:4px 12px; background:#28a745; color:white; border:none; border-radius:4px; cursor:pointer; margin-right:4px;">Accept</button>
                    </form>
                    <form action="/doctors/appointment/${data.appointmentId}/reject" method="POST" style="display:inline;">
                        <button type="submit" style="padding:4px 12px; background:#dc3545; color:white; border:none; border-radius:4px; cursor:pointer;">Reject</button>
                    </form>
                </td>
            `;
            
            // Insert after the header row (at position 1)
            const headerRow = table.querySelector('tr');
            if (headerRow && headerRow.nextSibling) {
                // Insert after header row
                headerRow.parentNode.insertBefore(newRow, headerRow.nextSibling);
            } else {
                // Just append if no rows exist after header
                table.appendChild(newRow);
            }
            
            // Add visual feedback
            newRow.style.background = '#d4edda';
            setTimeout(function() {
                newRow.style.background = '';
            }, 3000);
            
            console.log('‚úÖ UI updated with new appointment');
        });
        
        socket.on('disconnect', function() {
            console.log('‚ö†Ô∏è Disconnected from Socket.IO server');
        });
        
        // ============ DOCTOR STATUS FUNCTIONALITY ============
        
        // Fetch current status on page load
        async function loadCurrentStatus() {
            try {
                const response = await fetch('/doctors/status');
                const data = await response.json();
                updateStatusUI(data.status);
            } catch (error) {
                console.error('Error loading status:', error);
            }
        }
        
        // Update doctor status
        async function updateStatus(newStatus) {
            try {
                const response = await fetch('/doctors/status/update', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ status: newStatus })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    updateStatusUI(newStatus);
                    console.log('‚úÖ Status updated to:', newStatus);
                } else {
                    alert('Failed to update status: ' + data.error);
                }
            } catch (error) {
                console.error('Error updating status:', error);
                alert('Network error. Please try again.');
            }
        }
        
        // Update status UI elements
        function updateStatusUI(status) {
            const badge = document.getElementById('current-status-badge');
            const buttons = document.querySelectorAll('.status-btn');
            
            // Remove all active classes
            buttons.forEach(btn => btn.classList.remove('active'));
            
            // Update badge
            badge.className = 'current-status ' + status;
            badge.textContent = status.toUpperCase();
            
            // Highlight active button
            const activeBtn = document.querySelector('.status-btn.' + status);
            if (activeBtn) {
                activeBtn.classList.add('active');
            }
        }
        
        // Listen for real-time status changes (from other sessions)
        socket.on('doctorStatusChanged', function(data) {
            console.log('üë®‚Äç‚öïÔ∏è Doctor status changed:', data);
            
            // Update UI if it's this doctor's status
            if (data.doctorId === doctorId) {
                updateStatusUI(data.status);
            }
        });
        
        // Load current status on page load
        if (doctorId) {
            loadCurrentStatus();
        }
    </script>
</body>
</html>

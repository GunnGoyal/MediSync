<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Disease History ‚Äì Medisync</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #0066ff;
      --primary-dark: #0052cc;
      --secondary: #00d4aa;
      --secondary-dark: #00a8cc;
      --accent: #ff6b6b;
      --warning: #fbbf24;
      --dark: #1a1a2e;
      --light: #f8fafc;
      --gradient-hero: linear-gradient(135deg, #0066ff 0%, #00d4aa 50%, #667eea 100%);
      --gradient-patient: linear-gradient(135deg, #0066ff 0%, #0052cc 50%, #667eea 100%);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--light);
      color: var(--dark);
      min-height: 100vh;
    }

    /* Animated Background */
    .bg-animated {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      background: linear-gradient(-45deg, #0066ff, #00d4aa, #667eea, #764ba2);
      background-size: 400% 400%;
      animation: gradientBG 15s ease infinite;
      opacity: 0.03;
    }

    @keyframes gradientBG {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    /* Navbar */
    .navbar-custom {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      box-shadow: 0 2px 30px rgba(0, 0, 0, 0.08);
      padding: 1rem 0;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .navbar-brand {
      font-size: 1.5rem;
      font-weight: 800;
      background: var(--gradient-patient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
    }

    .back-btn {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--dark);
      text-decoration: none;
      font-weight: 600;
      padding: 0.5rem 1.25rem;
      border-radius: 50px;
      transition: all 0.3s ease;
      border: 2px solid #e2e8f0;
    }

    .back-btn:hover {
      border-color: var(--primary);
      color: var(--primary);
      background: rgba(0, 102, 255, 0.05);
    }

    /* Page Header */
    .page-header {
      background: var(--gradient-patient);
      padding: 3rem 0;
      margin-bottom: 2rem;
      position: relative;
      overflow: hidden;
    }

    .page-header::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -10%;
      width: 400px;
      height: 400px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.1);
    }

    .page-header::after {
      content: '';
      position: absolute;
      bottom: -30%;
      left: -5%;
      width: 300px;
      height: 300px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.08);
    }

    .header-content {
      position: relative;
      z-index: 1;
      color: white;
    }

    .header-content h1 {
      font-size: 2rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .header-content p {
      opacity: 0.9;
      font-size: 1.1rem;
    }

    .header-stats {
      display: flex;
      gap: 2rem;
      margin-top: 1.5rem;
    }

    .header-stat {
      background: rgba(255, 255, 255, 0.15);
      padding: 1rem 1.5rem;
      border-radius: 16px;
      text-align: center;
    }

    .header-stat-number {
      font-size: 1.75rem;
      font-weight: 800;
    }

    .header-stat-label {
      font-size: 0.85rem;
      opacity: 0.9;
    }

    /* Content Card */
    .content-card {
      background: white;
      border-radius: 24px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
      border: 1px solid rgba(0, 0, 0, 0.04);
      overflow: hidden;
      margin-bottom: 2rem;
    }

    .card-header-custom {
      padding: 1.5rem 2rem;
      border-bottom: 1px solid #e2e8f0;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .card-header-custom h3 {
      font-size: 1.25rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin: 0;
    }

    .card-header-custom h3 i {
      color: var(--primary);
    }

    .card-body-custom {
      padding: 1.5rem 2rem;
    }

    /* Disease Timeline */
    .disease-timeline {
      position: relative;
    }

    .disease-timeline::before {
      content: '';
      position: absolute;
      left: 27px;
      top: 0;
      bottom: 0;
      width: 2px;
      background: linear-gradient(to bottom, var(--primary), var(--secondary));
      border-radius: 2px;
    }

    .disease-item {
      display: flex;
      gap: 1.5rem;
      margin-bottom: 1.5rem;
      position: relative;
    }

    .disease-item:last-child {
      margin-bottom: 0;
    }

    .disease-marker {
      width: 56px;
      height: 56px;
      border-radius: 16px;
      background: var(--gradient-patient);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.25rem;
      flex-shrink: 0;
      z-index: 1;
      box-shadow: 0 4px 15px rgba(0, 102, 255, 0.3);
    }

    .disease-content {
      flex: 1;
      background: #f8fafc;
      border-radius: 16px;
      padding: 1.25rem 1.5rem;
      transition: all 0.3s ease;
      border: 1px solid transparent;
    }

    .disease-content:hover {
      background: white;
      border-color: #e2e8f0;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
      transform: translateX(5px);
    }

    .disease-name {
      font-size: 1.1rem;
      font-weight: 700;
      color: var(--dark);
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .disease-date {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #64748b;
      font-size: 0.9rem;
    }

    .disease-date i {
      color: var(--primary);
    }

    /* Grid View */
    .disease-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .disease-card {
      background: white;
      border-radius: 20px;
      padding: 1.5rem;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
      border: 1px solid rgba(0, 0, 0, 0.04);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .disease-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: var(--gradient-patient);
    }

    .disease-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
    }

    .disease-card-icon {
      width: 60px;
      height: 60px;
      border-radius: 16px;
      background: rgba(0, 102, 255, 0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--primary);
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .disease-card h4 {
      font-size: 1.15rem;
      font-weight: 700;
      color: var(--dark);
      margin-bottom: 0.75rem;
    }

    .disease-card-date {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #64748b;
      font-size: 0.9rem;
      background: #f8fafc;
      padding: 0.5rem 1rem;
      border-radius: 50px;
      width: fit-content;
    }

    .disease-card-date i {
      color: var(--secondary);
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
    }

    .empty-state-icon {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background: rgba(0, 102, 255, 0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
    }

    .empty-state-icon i {
      font-size: 3rem;
      color: var(--primary);
    }

    .empty-state h3 {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--dark);
      margin-bottom: 0.75rem;
    }

    .empty-state p {
      color: #64748b;
      font-size: 1.1rem;
      max-width: 400px;
      margin: 0 auto 1.5rem;
    }

    .empty-state .btn-action {
      background: var(--gradient-patient);
      color: white;
      border: none;
      padding: 0.875rem 2rem;
      border-radius: 50px;
      font-weight: 600;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
    }

    .empty-state .btn-action:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(0, 102, 255, 0.3);
      color: white;
    }

    /* View Toggle */
    .view-toggle {
      display: flex;
      gap: 0.5rem;
      background: #f1f5f9;
      padding: 0.25rem;
      border-radius: 12px;
    }

    .view-toggle-btn {
      padding: 0.5rem 1rem;
      border: none;
      background: transparent;
      border-radius: 8px;
      font-weight: 600;
      color: #64748b;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .view-toggle-btn.active {
      background: white;
      color: var(--primary);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .view-toggle-btn:hover:not(.active) {
      color: var(--dark);
    }

    /* Back Button Footer */
    .page-footer {
      text-align: center;
      padding: 2rem 0 3rem;
    }

    .btn-back-dashboard {
      background: white;
      color: var(--primary);
      border: 2px solid var(--primary);
      padding: 0.875rem 2rem;
      border-radius: 50px;
      font-weight: 600;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
    }

    .btn-back-dashboard:hover {
      background: var(--gradient-patient);
      color: white;
      border-color: transparent;
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(0, 102, 255, 0.2);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .header-content h1 {
        font-size: 1.5rem;
      }

      .header-stats {
        flex-direction: column;
        gap: 1rem;
      }

      .disease-timeline::before {
        display: none;
      }

      .disease-item {
        flex-direction: column;
        gap: 0.75rem;
      }

      .disease-marker {
        width: 48px;
        height: 48px;
      }

      .disease-grid {
        grid-template-columns: 1fr;
      }

      .card-header-custom,
      .card-body-custom {
        padding: 1rem 1.25rem;
      }

      .view-toggle {
        width: 100%;
        justify-content: center;
      }
    }

    /* Animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in {
      animation: fadeInUp 0.5s ease forwards;
    }

    .animate-fade-in:nth-child(1) { animation-delay: 0.1s; }
    .animate-fade-in:nth-child(2) { animation-delay: 0.15s; }
    .animate-fade-in:nth-child(3) { animation-delay: 0.2s; }
    .animate-fade-in:nth-child(4) { animation-delay: 0.25s; }
    .animate-fade-in:nth-child(5) { animation-delay: 0.3s; }
    .animate-fade-in:nth-child(6) { animation-delay: 0.35s; }
  </style>
</head>
<body>
  <div class="bg-animated"></div>

  <!-- Navbar -->
  <nav class="navbar-custom">
    <div class="container">
      <div class="d-flex align-items-center justify-content-between">
        <a class="navbar-brand" href="/">
          <span>üè•</span> Medisync
        </a>
        <a href="/patient/dashboard" class="back-btn">
          <i class="fas fa-arrow-left"></i>
          <span>Back to Dashboard</span>
        </a>
      </div>
    </div>
  </nav>

  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <div class="header-content">
        <div class="row align-items-center">
          <div class="col-md-8">
            <h1>
              <i class="fas fa-clipboard-list"></i>
              Disease History
            </h1>
            <p>Track and review your complete medical history and past diagnoses</p>
          </div>
          <div class="col-md-4">
            <div class="header-stats">
              <div class="header-stat">
                <div class="header-stat-number"><%= history ? history.length : 0 %></div>
                <div class="header-stat-label">Total Records</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="container">
    <% if (history && history.length > 0) { %>
      <!-- Timeline View -->
      <div class="content-card">
        <div class="card-header-custom">
          <h3><i class="fas fa-history"></i> Medical Timeline</h3>
          <div class="view-toggle">
            <button class="view-toggle-btn active" onclick="showView('timeline')">
              <i class="fas fa-stream"></i> Timeline
            </button>
            <button class="view-toggle-btn" onclick="showView('grid')">
              <i class="fas fa-th-large"></i> Grid
            </button>
          </div>
        </div>
        <div class="card-body-custom">
          <!-- Timeline View -->
          <div id="timeline-view" class="disease-timeline">
            <% history.forEach((h, index) => { %>
              <div class="disease-item animate-fade-in">
                <div class="disease-marker">
                  <i class="fas fa-stethoscope"></i>
                </div>
                <div class="disease-content">
                  <div class="disease-name">
                    <i class="fas fa-virus text-primary"></i>
                    <%= h.disease_name %>
                  </div>
                  <div class="disease-date">
                    <i class="fas fa-calendar-alt"></i>
                    Diagnosed on <%= new Date(h.diagnosed_date).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>

          <!-- Grid View (Hidden by default) -->
          <div id="grid-view" class="disease-grid" style="display: none;">
            <% history.forEach((h, index) => { %>
              <div class="disease-card animate-fade-in">
                <div class="disease-card-icon">
                  <i class="fas fa-notes-medical"></i>
                </div>
                <h4><%= h.disease_name %></h4>
                <div class="disease-card-date">
                  <i class="fas fa-calendar-check"></i>
                  <%= new Date(h.diagnosed_date).toDateString() %>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    <% } else { %>
      <!-- Empty State -->
      <div class="content-card">
        <div class="card-body-custom">
          <div class="empty-state">
            <div class="empty-state-icon">
              <i class="fas fa-clipboard-check"></i>
            </div>
            <h3>No Disease History</h3>
            <p>Great news! You don't have any recorded disease history. Keep maintaining your healthy lifestyle!</p>
            <a href="/patient/dashboard" class="btn-action">
              <i class="fas fa-arrow-left"></i>
              Back to Dashboard
            </a>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Footer -->
    <div class="page-footer">
      <a href="/patient/dashboard" class="btn-back-dashboard">
        <i class="fas fa-home"></i>
        Return to Dashboard
      </a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function showView(view) {
      const timelineView = document.getElementById('timeline-view');
      const gridView = document.getElementById('grid-view');
      const buttons = document.querySelectorAll('.view-toggle-btn');

      buttons.forEach(btn => btn.classList.remove('active'));

      if (view === 'timeline') {
        timelineView.style.display = 'block';
        gridView.style.display = 'none';
        buttons[0].classList.add('active');
      } else {
        timelineView.style.display = 'none';
        gridView.style.display = 'grid';
        buttons[1].classList.add('active');
      }
    }
  </script>
</body>
</html>